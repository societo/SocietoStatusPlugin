<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="societo.plugin.status.activity_generator" class="SocietoPlugin\Societo\StatusPlugin\ActivityGenerator">
            <argument>SocietoPlugin\Societo\StatusPlugin\Entity\Status</argument>
            <tag name="societo.activity.generator" />
        </service>

        <service id="societo.status.page_gadget.status_form" class="SocietoPlugin\Societo\StatusPlugin\PageGadget\StatusForm">
            <tag name="societo.page.gadget" />
        </service>
    </services>
</container>
